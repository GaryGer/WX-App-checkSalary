/* pages/index/login/login.wxss */

.loginContainer {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.userInfo-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 50px;
  align-items: center;
}

.userInfo-nickNameView {
  width: 270px;
  height: 30px;
  flex-direction: row;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.textLabel {
  font-size: 14px;
}

.input {
  border: 1px solid lightgrey;
  font-size: 14px;
  height: 30px;
  width: 200px;
  padding-left: 5px;
}

.buttonText {
  font-size: 13px;
  color: gray;
  text-decoration: underline;
  margin-left: 0;
  margin-right: 0;
  padding-left: 5px;
  padding-right: 5px;
  background-color: "#ffffff"
}

.buttonText::after {
  border: none;
}
.forget {
  height: 30px;
  flex-direction: row;
  justify-content: space-between;
  display: flex;
}

.button {
  margin-top: 50px;
  width: 270px;
  border-width: 1px;
  border-color: '#bbbbbb';
}
