.userCenterContainer{
  height: 100%;
  width: 100%;
  flex-direction: column;
  display: flex;
}
.cellContainer{
  height: 44px;
  width: 100%;
  flex-direction: row;
  display: flex;
  align-items: center;
  background-color: beige;
  margin-top: 5px;
  justify-content: space-between;
}
.titleText{
  font-size: 15px;
  margin-left: 15px;
}
.rightImg{
  margin-right: 15px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.userAvatarImg{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
  border: 1px solid yellowgreen
}
.input{
  height: 30px;
  margin-right: 10px;
  text-align: right;
}