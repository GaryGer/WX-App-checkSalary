.mineContainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.userHeaderView{
  width: 100%;
  height: 120px;
  background-color: beige;
  margin-top: 5px;
  display: flex;
  justify-content: space-between
}
.userImgNameView{
  flex-direction: row;
  display: flex;
  align-items: flex-end
}
.userHeaderImg{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 1px solid yellowgreen; 
  margin-bottom: 30px;
  margin-left: 15px
}
.userName{
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 30px;
  margin-left: 10px;
}
.rightImg{
  width: 20px;
  height: 24px;
  margin-right: 10px;
  margin-top: 48px;
}